/* pages/personAdmin/personAdmin.wxss */
.item{
  width: 670rpx;
  height: 176rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 19rpx 0 rgba(0,0,0,0.10);
  margin: 0 auto 20rpx;
  padding: 0 40rpx;
  box-sizing: border-box
}
.item:first-child{
  margin-top: 40rpx
}
.mainView{
  margin: 20rpx 0 16rpx
}
.avatarUrl{
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius: 50%;
  background: #d8d8d8
}
.name{
  font-size: 36rpx;
  color: #2d2d2d;
  vertical-align: top;
  display: inline-block;
  height: 50rpx;
  font-weight: bold;
  max-width: 240rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.identity{
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-top: 5rpx;
  margin-left: 18rpx
}
.login-type{
  font-size: 24rpx;
  color: #2d2d2d
}
.item-time{
  font-size: 24rpx;
  color: #b0b0b0
}
.transfer,.remove{
  width: 144rpx;
  height: 48rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #fff
}
.transfer{
  background: #256ef6;
  margin: 30rpx 0 18rpx
}
.remove{
  background: #ff6959
}
.mainView .right{
  margin-left: 46rpx;
  float: left
}
.createPerson{
  width: 670rpx;
  height: 90rpx;
  border-radius: 8rpx;
  background: #256ef6;
  color: #fff;
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  left: 40rpx
}

.nothingImg{
  width: 504rpx;
  height: 514rpx;
  display: block;
  margin: 98rpx auto 110rpx;
}
.nothingTitle{
  font-size: 40rpx;
  color: #3A4BF9;
  text-align: center
}
.goCreate{
  width: 160rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: #3ABBF9;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx auto 0
}