/* pages/zeroRushAll/zeroRushAll.wxss */
.header{
  display: flex;
  background: #abca9a;
  padding: 62rpx 0 31rpx
}
.header-item{
  width: 100%;
  text-align: center
}
.header-time{
  font-size: 48rpx;
  color: #f4f4f4;
  font-weight: bold
}
.header-status{
  font-size: 24rpx;
  color: #f4f4f4;
  margin-top: 10rpx
}
.container{
  width: 670rpx;
  margin: 0 auto;
  padding-bottom: 175rpx
}
.item{
  height: 192rpx;
  box-shadow: 0 0 8rpx 0 rgba(220,220,220,0.50);
  border-radius: 8rpx;
  margin-bottom: 20rpx
}
.item:first-child{
  margin-top: 12rpx
}
.item .left{
  margin-top: 20rpx
}
.item-imgView{
  width: 188rpx;
  height: 152rpx;
  margin-right: 38rpx;
  
}
.item-imgView image{
  width: 100%;
  height: 100%;
  display: block
}
.name{
  color: #2d2d2d;
  font-size: 36rpx;
  font-weight: bold;
  
}
.price{
  font-size: 36rpx;
  margin-top: 16rpx;
  color: #F53958;
  font-weight: bold
}
.oPrice{
  font-size: 24rpx;
  color: #B0B0B0;
  margin-top: 4rpx;
  text-decoration: line-through
}
.scrape-view{
  position: relative;
  height: 192rpx;
  width: 124rpx
}
.scrape-btn{
  width: 124rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  background: #5a5a5a;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx
}
.scrape-now{
  background-image: linear-gradient(90deg, #FF457A 0%, #EC2D37 98%);
}
.scrape-will{
  background-image: linear-gradient(-90deg, #FFB25E 0%, #EDA922 97%);
}
.bottom{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #5a5a5a;
  text-align: center;
  padding-bottom: 165rpx
}
.footer{
  position: fixed;
  height: 104rpx;
  width: 750rpx;
  bottom: 0;
  left: 0;
  background: #abca9a
}
.add-btn{
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
  background-image: radial-gradient(50% 102%, #BEE9A7 50%, #ABCA9A 100%);
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  position: fixed;
  bottom: 26rpx;
  left: 40rpx
}
.add-btn view{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 72rpx;
  height: 100rpx
}
.PriceView{
  position: absolute;
  top: 4rpx;
  left: 252rpx;
  color: #2d2d2d
}
.acPrice{
  font-size: 36rpx;
  font-weight: bold
}
.disPrice{
  font-size: 24rpx;
  margin-top: 4rpx
}
.submit-order{
  height: 104rpx;
  line-height: 104rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  position: absolute;
  right: 50rpx
}


.istime{
  color: #2d2d2d
}