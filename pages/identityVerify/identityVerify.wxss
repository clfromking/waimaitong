/* pages/identityVerify/identityVerify.wxss */
.safe{
  width: 186rpx;
  display: block;
  margin: 64rpx auto
}
.safe-text{
  color: #333;
  font-size: 30rpx;
  text-align: center
}
.provings-view{
  width: 542rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #7d7d7d;
  margin: 0 auto
}
.provings-view .title{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  color: #999;
  font-size: 30rpx;
  padding-left: 40rpx;
  vertical-align: top;
  margin-right: 54rpx
}
.provings-view:nth-child(1) .title,.provings-view:nth-child(2) .title{
  margin-right: 24rpx
}
.provings-view input{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  width: 300rpx
}
.getcode{
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  margin-right: 34rpx
}
.codeInput{
  width: 160rpx !important
}
.next{
  width: 402rpx;
	height: 58rpx;
	background: #abca9a;
	border-radius: 30rpx;
  text-align: center;
  line-height: 58rpx;
  color: #fff;
  font-size: 30rpx
}
.provings-view:last-child{
  margin-bottom: 80rpx;
}
.provings-view:first-child{
  margin: 60rpx auto 36rpx
}
.provings-view:nth-child(2){
  margin-bottom: 36rpx
}
.no-proving{
  color: #93ad84;
  font-size: 30rpx;
  text-align: center;
  margin-top: 70rpx
}

.inviteListItem{
  height: 100rpx;
  width: 670rpx;
  margin: 40rpx auto 0 ;
  box-shadow: 0 4rpx 44rpx 0 rgba(0,0,0,0.20);
  border-radius: 4rpx;
  padding: 0 10rpx;
  box-sizing: border-box
}
.poiName{
  /* display: inline-block; */
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-weight: bolder;
  font-size: 36rpx
}
.joinBtn{
  display: inline-block;
  width: 144rpx;
  height: 48rpx;
  margin-top: 26rpx;
  background: #256EF6;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 48rpx
}
.createTime{
  height: 40rpx;
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 40rpx
}