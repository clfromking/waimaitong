<navtitle status-height="{{statusHeight}}" status-bgcolor="#abca9a" nav-bgcolor="#abca9a" nav-text="{{navText}}" nav-textcolor="#fff"></navtitle>
<view>
  <text>手机号码</text>
  <input disabled='{{isdisabled}}' value='{{memberMobile}}'></input>
</view>
<view>
  <text>真实姓名</text>
  <input disabled='{{isdisabled}}' value='{{memberName}}'></input>
</view>

<view class="section">
  <text class="section__title">所在地区</text>
  <text disabled='{{isdisabled}}' bindtap='chooseLocation'>{{region[0]}}，{{region[1]}}，{{region[2]}}</text>
</view>

