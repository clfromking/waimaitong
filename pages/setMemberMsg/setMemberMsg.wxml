<view>
  <text>店铺位置</text>
  <input disabled='{{isdisabled}}' value='{{poiAddress}}'></input>
</view>
<view>
  <text>品牌名称</text>
  <input disabled='{{isdisabled}}' value='{{poiBrandName}}'></input>
</view>

<view class="section">
  <view class="section__title">多列选择器</view>
  <picker disabled='{{isdisabled}}' mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
    <view class="picker">
      当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
    </view>
  </picker>
</view>

<button bindtap='changeAll'>更改</button>