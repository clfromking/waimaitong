/* pages/biddingTop/biddingTop.wxss */
.container{
  width: 670rpx;
  margin: 0 auto
}
.balance-title{
  font-size: 28rpx;
  color: #2d2d2d;
  text-align: center;
  margin-top:40rpx 
}
.balance-money{
  font-size: 44rpx;
  color: #f63f5d;
  text-align: center;
  font-weight: bold;
  margin-top: 20rpx
}
.list{
  margin-top: 40rpx
}
.item{
  width: 196rpx;
  height: 72rpx;
  border: 2rpx solid #abca9a;
  box-sizing: border-box;
  text-align: center;
  line-height: 72rpx;
  font-size: 24rpx;
  margin-right: 41rpx;
  margin-bottom: 40rpx
}
.item:nth-child(3n){
  margin-right: 0
}
.item-text{
  display: inline-block;
  width: 100%;
  height: 100%
}
.item input{
  width: 100%;
  height: 100%;
  font-size: 24rpx
}
.hint{
  font-size: 24rpx;
  color: #ec5c62
}
.footer{
  text-align: center;
  width: 750rpx;
  height: 230rpx;
  position: fixed;
  bottom: 80rpx;
  left: 0
}
.topRecord{
  color: #ec5c62;
  font-size: 24rpx;
  
}
.agreement{
  font-size: 24rpx;
  color: #b0b0b0;
  width: 408rpx;
  margin: 21rpx auto 42rpx
}
.topBtn{
  width: 606rpx;
  height: 68rpx;
  background: #abca9a;
  border-radius: 8rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 68rpx;
  color: #fff
}


.isSelect{
  background: #abca9a
}

text[hidden]{
  display: none !important
}