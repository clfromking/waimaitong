/* pages/applyFor/applyFor.wxss */
page{
  padding-bottom: 50rpx
}
.container{
  padding: 0 40rpx
}
input{
  display: inline-block;
  /* background: aqua; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx
}
picker{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  width: 450rpx
}
.item{
  height: 80rpx;
  border-bottom: 2rpx solid #d2d2d2
}
.address{
  display: block;
  font-size: 24rpx
}
.item-title{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #5a5a5a;
  vertical-align: top
}
.title{
  color: #2d2d2d;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
}
.sub,.add{
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  /* border: 4rpx solid #abca9a; */
  border-radius: 50%;
  vertical-align: top;
  margin-top: 24rpx
}
