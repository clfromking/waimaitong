/* pages/refund/refund.wxss */
page{
  background: #eee
}
.container{
  /* border-bottom: 2rpx solid #7d7d7d ; */
  padding: 0 25rpx;
  background: #fff
  /* box-sizing: content-box */
}
.order-lists{
  height: 210rpx;
  /* width: 678rpx; */
  margin: 0 auto;
  background: #fff;
  /* padding: 0 36rpx; */
  
}
.order-lists:last-child{
  margin-bottom: 30rpx
}
.order-list-img-view{
  width: 160rpx;
  height: 160rpx;
  margin-top: 25rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  /* display: inline-block */
}
.order-list-img{
  width: 100%;
  height: 100%;
  display: block
}
.order-list-other{
  height: 100%;
  display: inline-block;
  font-size: 28rpx;
  color: #333
}
.order-name{
  margin-top: 36rpx
}
.order-num{
  margin-top: 16rpx;
}
.order-money{
  margin-top: 16rpx
}
.fenge{
  height: 2rpx;
  background: #7d7d7d;
  width: 700rpx;
  /* margin: 30rpx auto 0; */
  opacity: 0.4
}
.confirm-refund{
  width: 184rpx;
  height: 54rpx;
  border-radius: 28rpx;
  background: #abca9a;
  text-align: center;
  line-height: 54rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx 0
}
.refund-num-view{
  height: 90rpx;
  padding-right: 14rpx;
  /* border-bottom: 2rpx solid #bfbfbf;
	opacity: 0.5; */
}
.refund-num-view text{
  display: inline-block;
  color: #333;
  font-size: 30rpx;
  height: 100%;
  line-height: 90rpx
}
.refund-num-view .right{
  height: 100%
}
.refund-num-view input{
  display: inline-block;
  height: 36rpx;
  width: 114rpx;
  border: solid 2rpx #abca9a;
  box-sizing: border-box;
  margin-top: 20rpx;
  /* margin-right: 60rpx; */
  text-align: center;
  font-size: 30rpx;
  line-height: 36rpx
}
.sub,.add{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #abca9a;
  text-align: center;
  line-height: 40rpx;
  color: #abca9a;
  vertical-align: top;
  margin-top: 23rpx
}
.sub,.number{
  margin-right: 8rpx
}
.refund-reason-view{
  position: relative
}
.reason-title,.img-title{
  font-size: 30rpx;
  color: #333;
  margin: 34rpx 0
}
textarea{
  width: 676rpx;
	height: 204rpx;
	background: #eeeeee;
	border: solid 2rpx #707070;
  padding: 16rpx 20rpx;
  line-height: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  margin: 0 auto 40rpx

}
.place-style{
  font-size: 26rpx;
  color: #999;
  
}
.length-label{
  display: inline-block;
  color: #999;
  font-size: 26rpx;
  position: absolute;
  bottom: 12rpx;
  right: 44rpx
}
.imgs-item{
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #7d7d7d;
  margin-bottom: 40rpx
}
.imgs-alt{
  font-size: 24rpx;
  color: #999;
  padding-bottom: 40rpx
}
.submit-view{
  padding: 54rpx 0
}
.submit-view button{
  width: 388rpx;
	height: 80rpx;
	background-color: #b5b5b5;
	border-radius: 40rpx;
	border: solid 2rpx #b5b5b5;
  color: #fff;
  font-size: 36rpx;
  line-height: 80rpx;
  
}